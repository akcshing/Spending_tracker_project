<h1>Transactions</h1>

  <div class="centre">
    <a href="/transactions/new" class="click">Add New</a>
  </div>

<div class="">
  <table>
    <tr class="centre">
      <td>Amount</td>
      <td>Tag</td>
      <td>Merchant</td>
      <td>Timestamp</td>
    </tr>
    <% @transactions.each do |transaction| %>
    <tr>
      <td class= "click number"><a href="/transactions/<%=transaction.id%>"><%= sprintf "%.2f", transaction.amount%></a></td>
      <td class= "click"><a href="/tags/<%= transaction.tag.id %>""><%= transaction.tag.name%></a></td>
      <td class= "click"><a href="/merchants/<%= transaction.merchant.id %>"><%= transaction.merchant.name%></a></td>
      <td><%= transaction.time_stamp %></td>
    </tr>
    <% end %>
  </table>
  </div>
