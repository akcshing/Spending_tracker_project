<h1>Budgets</h1>
<div class="centre">
  <a href="/budgets/new" class="click">Add New Budget</a>
  <a class="click" href="/budgets/overall/edit">Overall Budget</a>
</div>


<table id="table_set_width">
  <tr>
    <td></td>
    <td>Spent</td>
    <td>Budget</td>
  </tr>
  <tr>
    <td>Total</td>
    <td class="number"><%=sprintf "%.2f",  @total %></td>
    <td class="number"><%=sprintf "%.2f", @overall_budget.amount%></td>
  </tr>
  <% @tags.each do |tag| %>
  <tr>
    <td class="click"><a href="/tags/<%= tag.id %>"><%= tag.name%></a></td>
    <td class="number"><%= sprintf "%.2f", tag.total_spent %></td>
    <td class="click number"><a href="/budgets/<%= tag.budget.id %>/edit"><%= sprintf "%.2f", tag.budget.amount %></a></td>
  </tr>
  <% end %>
</table>
