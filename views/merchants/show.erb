<h1><%= @merchant.name %>: Spent Â£<%=sprintf "%.2f", @merchant_total %></h1>

<div class="centre">
  <a href="/merchants/<%=@merchant.id%>/edit" class = "click">Edit name</a>
</div>

<form class="centre" action="/merchants/<%= @merchant.id %>/delete" method="post">
  <input type="submit" value="Delete">
</form>

<h2 class="centre">Transactions</h2>
<table>
  <tr>
    <td>Amount</td>
    <td>Tag</td>
    <td>Timestamp</td>
  </tr>
  <% @merchant_transactions.each do |transaction| %>
  <tr>
    <td class="click"><a href="/transactions/<%=transaction.id%>"><%= sprintf "%.2f", transaction.amount%></a></td>
    <td class="click"><a href="/tags/<%= transaction.tag.id %>"><%= transaction.tag.name%></a></td>
    <td><%= transaction.time_stamp %></td>
  </tr>
  <% end %>
</table>
