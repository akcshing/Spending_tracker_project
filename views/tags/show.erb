
<h2><%= @tag.name %></h2>
<a href="/tags/<%=@tag.id%>/edit">Edit name</a>
<form class="" action="/tags/<%= @tag.id %>/delete" method="post">
  <input type="submit" value="Delete">
</form>

<h2>Spent:  <%= @tag.total_spent %></h2>

<h3>Transactions</h3>
<table>
  <tr>
    <td>Amount</td>
    <td>Merchant</td>
    <td>Timestamp</td>
  </tr>
  <% @tag_transactions.each do |transaction| %>
  <tr>
    <td><a href="/transactions/<%=transaction.id%>"><%= transaction.amount%></a></td>
    <td><a href="/merchants/<%= transaction.merchant.id %>"><%= transaction.merchant.name%></a></td>
    <td><%= transaction.time_stamp %></td>
  </tr>
  <% end %>
</table>
